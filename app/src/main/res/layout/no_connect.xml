<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/txt_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/ic_clear"
        android:padding="16dp"
        android:textAppearance="@style/customFont1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/wifi" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Yah.., tidak ada koneksi internet"
        android:textAppearance="@style/customFont4"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Koneksi terputus, periksa data seluler atau Wi-Fi Anda, lalu ketuk 'coba lagi'"
        android:textAppearance="@style/customFont1" />

    <Button
        android:id="@+id/btn_coba"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorBlue"
        android:text="Coba Lagi"
        android:textAllCaps="false"
        android:textAppearance="@style/customFont1"
        android:textColor="@color/colorWhite" />
</LinearLayout>
